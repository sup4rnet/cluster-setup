#!/bin/bash

# this is scheduled as cronjob running on boot, it listens
# to filechanges to the db, whenever a change is detected it runs
# a dedicated script to notify the target machines

WORDKDIR=$(dirname $0)
 
echo "Listening for changes to database: $WORDKDIR/webapp/.data/reservations.csv"
ls ./webapp/.data/reservations.csv | /usr/local/bin/entr -spn './on-rsvp-change.sh'
